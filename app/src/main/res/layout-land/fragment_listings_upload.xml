<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <in.tosc.studddin.ui.FloatingActionButton
        android:id="@+id/listing_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:fab_colorNormal="@color/note_button"
        fab:fab_colorPressed="@color/note_button_pressed"
        fab:fab_icon="@drawable/ic_file_upload_white_48dp"
        fab:fab_title="upload"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <in.tosc.studddin.ui.ProgressBarCircular
        android:id="@+id/upload_progress"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerInParent="true"
        android:textSize="24sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/listing_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/listing_placeholder"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/listing_upload"
        android:layout_toStartOf="@+id/listing_upload" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="250dp"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp">

        <in.tosc.studddin.ui.MaterialEditText
            android:id="@+id/et_listing"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:hint="Listing Name"
            android:textCursorDrawable="@drawable/text_cursor_cyan"
            app:baseColor="@color/search_color"
            app:primaryColor="@color/colorPrimaryDark" />

        <in.tosc.studddin.ui.MaterialEditText
            android:id="@+id/et_mobile"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:digits="0123456789+"
            android:hint="Mobile"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:inputType="phone"
            android:textCursorDrawable="@drawable/text_cursor_cyan"
            app:baseColor="@color/search_color"
            app:primaryColor="@color/colorPrimaryDark" />

        <in.tosc.studddin.ui.MaterialEditText
            android:id="@+id/listing_desc"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Listing Description"
            android:inputType="textMultiLine"
            android:maxLength="100"
            android:maxLines="3"
            android:imeOptions="actionDone"
            android:textCursorDrawable="@drawable/text_cursor_cyan"
            app:baseColor="@color/search_color"
            app:primaryColor="@color/colorPrimaryDark" />

        <Spinner
            android:id="@+id/listing_category"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" />
        </LinearLayout>

</RelativeLayout>