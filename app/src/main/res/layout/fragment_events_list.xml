<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.tosc.studddin.fragments.events.EventsListFragment"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/selector_card_background">

        <in.tosc.studddin.customview.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/feed_search_hint"
            android:id="@+id/events_search"
            android:textCursorDrawable="@drawable/text_cursor_cyan"
            app:baseColor="@color/search_color"
            app:primaryColor="@color/colorPrimaryDark"
            app:floatingLabel="highlight"
            app:maxCharacters="25"
            app:singleLineEllipsis="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

    </LinearLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/swipeRefreshLayout">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listviewevents"
        android:layout_gravity="center_horizontal"
        android:dividerHeight="0dp"
        android:scrollbars="none"
        android:layout_marginTop="8dp"
        android:layoutAnimation="@anim/slide_in_gogo"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"/>
    </android.support.v4.widget.SwipeRefreshLayout>


</LinearLayout>
