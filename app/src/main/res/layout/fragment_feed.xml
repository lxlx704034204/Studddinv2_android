<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.tosc.studddin.fragments.FeedFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/feed_search_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

            <in.tosc.studddin.ui.MaterialEditText
                android:id="@+id/feed_search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:descendantFocusability="beforeDescendants"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:hint="@string/feed_search_hint"
                android:imeOptions="actionSearch"
                android:textCursorDrawable="@drawable/text_cursor_cyan"
                app:baseColor="@color/white"
                app:maxCharacters="25"
                app:floatingLabel="highlight"
                app:primaryColor="@color/colorPrimaryDark"
                app:singleLineEllipsis="true"
                app:errorColor="@color/white"
                app:BaseErrorColor="@color/colorPrimaryDark"/>
            <ImageButton
                android:id="@+id/searchblahblah"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/abc_ic_search_api_mtrl_alpha" />
        </LinearLayout>

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefreshLayoutfeed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/feed_search_frame">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/feed_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/feed_search_frame"
            android:layout_marginTop="5dp"
            android:layoutAnimation="@anim/slide_in_gogo"
            android:scrollbars="vertical" />
        </android.support.v4.widget.SwipeRefreshLayout>
    </RelativeLayout>
    

</FrameLayout>
