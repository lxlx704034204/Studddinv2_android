<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.tosc.studddin.fragments.FeedFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/feed_search_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/selector_card_background">
        <in.tosc.studddin.customview.MaterialEditText
            android:id="@+id/feed_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionSearch"
            android:hint="@string/feed_search_hint"
            android:textCursorDrawable="@drawable/text_cursor_cyan"
            android:layout_marginTop="5dp"
            app:baseColor="@color/search_color"
            app:primaryColor="@color/colorPrimaryDark"
            app:floatingLabel="highlight"
            app:maxCharacters="25"
            app:singleLineEllipsis="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        </FrameLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/feed_recycler_view"
            android:scrollbars="vertical"
            android:layout_below="@id/feed_search_frame"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="match_parent"
            android:layoutAnimation="@anim/slide_in_gogo" />
    </RelativeLayout>

</FrameLayout>
