<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="in.tosc.studddin.fragments.ListingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp"
        android:background="@drawable/selector_card_background">
    <in.tosc.studddin.customview.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/notes_search"
        android:id="@+id/listing_search"
        android:textCursorDrawable="@drawable/text_cursor_cyan"
        app:baseColor="@color/search_color"
        app:primaryColor="@color/colorPrimaryDark"
        app:floatingLabel="highlight"
        app:maxCharacters="25"
        app:singleLineEllipsis="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>
        </LinearLayout>

    <in.tosc.studddin.utils.ProgressBarCircular
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/progressBar"
        android:indeterminate="true" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
        android:id="@+id/listing_recycler_view"
        android:layoutAnimation="@anim/slide_in_gogo"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"/>

    </android.support.v4.widget.SwipeRefreshLayout>



</LinearLayout>
