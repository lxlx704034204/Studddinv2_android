<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <in.tosc.studddin.utils.FloatingActionsMenu
        android:id="@+id/multiple_actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        fab:fab_addButtonColorNormal="@color/note_button"
        fab:fab_addButtonColorPressed="@color/note_button_pressed"
        fab:fab_addButtonPlusIconColor="@color/white"
        fab:fab_labelStyle="@style/menu_labels_style"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp">

        <in.tosc.studddin.utils.FloatingActionButton
            android:id="@+id/camerafab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/white"
            fab:fab_title="camera"
            fab:fab_icon="@drawable/ic_camera_alt_grey600_48dp"
            fab:fab_colorPressed="@color/note_button_pressed"/>

        <in.tosc.studddin.utils.FloatingActionButton
            android:id="@+id/galleryfab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/white"
            fab:fab_title="gallery"
            fab:fab_icon="@drawable/ic_collections_grey600_48dp"
            fab:fab_colorPressed="@color/note_button_pressed"/>

        <in.tosc.studddin.utils.FloatingActionButton
            android:id="@+id/uploadfab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/white"
            fab:fab_title="upload"
            fab:fab_icon="@drawable/ic_file_upload_grey600_48dp"
            fab:fab_colorPressed="@color/note_button_pressed"/>

    </in.tosc.studddin.utils.FloatingActionsMenu>

