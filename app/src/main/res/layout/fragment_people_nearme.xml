<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/peopleNearme_container"
    tools:context="in.tosc.studddin.fragments.people.PeopleNearmeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        >

        <in.tosc.studddin.customview.MaterialEditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.5"
            android:id="@+id/people_search"
            android:hint="@string/notes_search"
            android:layout_marginLeft= "5dp"
            app:baseColor="@color/search_color"
            app:primaryColor="@color/colorPrimaryDark"
            app:floatingLabel="highlight"
            />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:background="@drawable/ic_action_search"
            />

    </LinearLayout>

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressbar_people"/>

    <ListView
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/listviewpeople"
        android:layout_gravity="center_horizontal"
        android:divider="@android:color/transparent"
        android:dividerHeight="5.0sp"
        android:scrollbars="none"
        android:visibility="gone"
        android:layoutAnimation="@anim/slide_in_gogo"
        />



</LinearLayout>
