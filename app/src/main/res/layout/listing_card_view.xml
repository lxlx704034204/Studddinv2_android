<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp">


        <com.parse.ParseImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/listing_image"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/listing_name"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/listing_image"
            android:layout_toEndOf="@+id/listing_image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/owner_name"
            android:layout_below="@+id/listing_name"
            android:layout_toRightOf="@+id/listing_image"
            android:layout_toEndOf="@+id/listing_image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mobile"
            android:layout_below="@+id/owner_name"
            android:layout_toRightOf="@+id/listing_image"
            android:layout_toEndOf="@+id/listing_image"
            android:text="New Text" />

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@android:drawable/ic_menu_compass"
            android:id="@+id/distance_image"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/mobile" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/listing_distance"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/distance_image"
            android:layout_alignStart="@+id/distance_image"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</android.support.v7.widget.CardView>