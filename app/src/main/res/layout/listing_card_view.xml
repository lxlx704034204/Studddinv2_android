<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp">


        <com.parse.ParseImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/listing_image"
            android:layout_margin="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/listing_name"
            android:layout_alignTop="@+id/listing_image"
            android:layout_toRightOf="@+id/listing_image"
            android:layout_toLeftOf="@+id/relativeLayout"
            android:layout_toStartOf="@+id/relativeLayout" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:layout_marginTop="2dp"
            android:id="@+id/listing_desc"
            android:layout_below="@+id/listing_name"
            android:layout_toRightOf="@+id/listing_image"
            android:layout_alignRight="@+id/listing_name"
            android:layout_alignEnd="@+id/listing_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/owner_name"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/listing_desc"
            android:layout_toRightOf="@+id/listing_image"
            android:layout_toLeftOf="@+id/relativeLayout"
            android:layout_toStartOf="@+id/relativeLayout" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:layout_marginTop="2dp"
            android:id="@+id/mobile"
            android:layout_below="@+id/owner_name"
            android:layout_alignLeft="@+id/owner_name"
            android:layout_alignStart="@+id/owner_name"
            android:layout_alignRight="@+id/owner_name"
            android:layout_alignEnd="@+id/owner_name" />

        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="fill_parent"
            android:layout_alignTop="@+id/listing_name"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/relativeLayout">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:src="@android:drawable/ic_menu_compass"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/listing_distance"
                android:layout_below="@+id/imageView"
                android:layout_centerHorizontal="true"
                android:gravity="center" />
        </RelativeLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>