<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <in.tosc.studddin.ui.ParseCircularImageView
            android:id="@+id/listing_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/listing_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/listing_image"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/listing_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/listing_name"
            android:layout_alignStart="@+id/listing_name"
            android:layout_alignLeft="@id/listing_name"
            android:layout_below="@+id/listing_name"
            android:text="New Text" />

        <TextView
            android:id="@+id/listing_created_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/listing_desc"
            android:layout_alignStart="@+id/listing_desc"
            android:layout_below="@+id/listing_desc"
            android:text="New Text" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listing_delete"
            android:src="@android:drawable/ic_menu_delete"
            android:layout_marginRight="2dp"
            android:layout_marginEnd="2dp"
            android:layout_alignTop="@id/listing_created_at"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</android.support.v7.widget.CardView>